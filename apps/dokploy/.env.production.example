# Dokploy Production Environment Variables
# Copy this file to .env.production and fill in your values

# Application
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database
DATABASE_URL=postgres://dokploy:password@dokploy-postgres:5432/dokploy

# Redis
REDIS_URL=redis://dokploy-redis:6379
REDIS_HOST=dokploy-redis

# API Keys
API_KEY=your-secret-api-key-here

# Cloud Configuration
IS_CLOUD=false

# Traefik Configuration
TRAEFIK_PORT=80
TRAEFIK_SSL_PORT=443
TRAEFIK_HTTP3_PORT=443
TRAEFIK_VERSION=3.6.1

# Mail Server
MAILSERVER_CONTAINER_NAME=mailserver

# Server URLs (for microservices communication)
SERVER_URL=http://dokploy-api:3001
JOBS_URL=http://dokploy-schedules:3002

# Site Configuration
SITE_URL=https://your-domain.com

# Authentication - GitHub OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Authentication - Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Admin User
USER_ADMIN_ID=

# Stripe Configuration (for billing)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
BASE_PRICE_MONTHLY_ID=
BASE_ANNUAL_MONTHLY_ID=

# SMTP Configuration (for email)
SMTP_FROM_ADDRESS=
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# Discord Webhook (optional)
DISCORD_WEBHOOK_URL=

# HubSpot Tracking (optional)
HUBSPOT_PORTAL_ID=
HUBSPOT_FORM_GUID=

# Monitoring (optional)
NEXT_PUBLIC_METRICS_URL=
NEXT_PUBLIC_METRICS_TOKEN=

# Cloud IPs (for cloud deployment)
DOKPLOY_CLOUD_IPS=

# Release Tag
RELEASE_TAG=latest

# Optional: Vercel URL (for email templates)
# VERCEL_URL=

# Mail Server Template Configuration (for mail-server template)
MAIL_HOSTNAME=mail.example.com
MAIL_DOMAIN=example.com
