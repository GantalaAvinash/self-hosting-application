# Dokploy Root Environment Variables
# Copy this file to .env and fill in your values

# Application
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database
DATABASE_URL=postgres://dokploy:password@localhost:5432/dokploy

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=dokploy-redis

# API Keys
API_KEY=your-secret-api-key-here

# Cloud Configuration
IS_CLOUD=false

# Traefik Configuration
TRAEFIK_PORT=80
TRAEFIK_SSL_PORT=443
TRAEFIK_HTTP3_PORT=443
TRAEFIK_VERSION=3.6.1

# Mail Server
MAILSERVER_CONTAINER_NAME=mailserver

# Server URLs (for microservices communication)
SERVER_URL=http://localhost:3001
JOBS_URL=http://localhost:3002

# Site Configuration
SITE_URL=http://localhost:3000

# Optional: Turbopack (for faster development)
# TURBOPACK=1
